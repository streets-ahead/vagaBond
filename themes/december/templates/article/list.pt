<section class='grid-8'>
	<% for (var i=0; i<data.article.length; i++) { %>
	<article>
		<h2><a href="/article/<%=data.article[i].seoUrl%>"><%= data.article[i].title %></a></h2> 
		<div class='by'>by <a href='#'><%=data.article[i].author%></a></div>

		<section>
		<time>
			<div class='month'><%=data.article[i].publishedDate.toString().substring(4, 7)%></div> 
			<div class='day'><%=data.article[i].publishedDate.getDay%></div>
		</time>
			<p>
				<%= blog.shortDisplay(markdown.parse(data.article[i].body), 750, 'article/' + data.article[i].seoUrl) %>
			</p>
		</section>
		<footer>
			<a href='/article/<%=data.article[i].seoUrl%>'>Read All 467 Words</a>
		</footer>
	</article>
	<% } %>
</section>
